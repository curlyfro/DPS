{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "DocumentProcessor": "Debug",
      "DocumentProcessor.Infrastructure.BackgroundTasks": "Debug",
      "DocumentProcessor.Application": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=DocumentProcessorDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "DocumentProcessing": {
    "StoragePath": "uploads",
    "TempPath": "temp"
  },
  "DocumentStorage": {
    "Provider": "LocalFileSystem",
    "LocalFileSystem": {
      "RootPath": "uploads",
      "MaxFileSizeInMB": 100,
      "AllowedExtensions": [".pdf", ".doc", ".docx", ".txt", ".rtf", ".odt", ".jpg", ".jpeg", ".png", ".xlsx", ".xls", ".mp3"]
    },
    "S3": {
      "BucketName": "document-processor-bucket",
      "Region": "us-east-1",
      "UsePresignedUrls": true,
      "PresignedUrlExpirationMinutes": 60
    },
    "FileShare": {
      "NetworkPath": "\\\\fileserver\\documents",
      "Username": "",
      "Domain": "",
      "MaxFileSizeInMB": 100
    }
  },
  "AIProcessing": {
    "DefaultProvider": "AmazonBedrock",
    "MaxRetries": 3,
    "RetryDelaySeconds": 5,
    "Providers": {
      "Mock": {
        "Enabled": false
      },
      "AmazonBedrock": {
        "Enabled": true,
        "Region": "us-east-1",
        "ModelId": "us.anthropic.claude-sonnet-4-20250514-v1:0",
        "MaxTokens": 4096,
        "Temperature": 0.7
      }
    }
  },
  "Bedrock": {
    "Region": "us-east-1",
    "ClassificationModelId": "us.anthropic.claude-sonnet-4-20250514-v1:0",
    "ExtractionModelId": "us.anthropic.claude-sonnet-4-20250514-v1:0",
    "SummarizationModelId": "us.anthropic.claude-sonnet-4-20250514-v1:0",
    "IntentModelId": "us.anthropic.claude-sonnet-4-20250514-v1:0",
    "MaxTokens": 4096,
    "Temperature": 0.3,
    "TopP": 0.9,
    "MaxRetries": 3,
    "RetryDelayMilliseconds": 1000,
    "EnableDetailedLogging": true,
    "AwsProfile": null
  },
  "Transcribe": {
    "S3BucketName": "document-processor-transcribe",
    "MaxWaitSeconds": 300
  },
  "BackgroundTasks": {
    "UsePriorityQueue": true,
    "MaxConcurrency": 3,
    "QueueCapacity": 100,
    "RetryPolicy": {
      "MaxRetries": 3,
      "DelayMilliseconds": 1000,
      "MaxDelayMilliseconds": 30000
    }
  }
}