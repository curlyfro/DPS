@page "/Account/AccessDenied"

<PageTitle>Access Denied - Document Processor</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm mt-5">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation text-danger" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h3 class="card-title mb-3">Access Denied</h3>
                    
                    <p class="text-muted mb-4">
                        You do not have permission to access this resource. 
                        This page may require additional privileges or specific role assignments.
                    </p>
                    
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        If you believe you should have access to this resource, please contact your system administrator.
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>
                            Return to Home
                        </a>
                        
                        <a href="/Account/Login" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Login with Different Account
                        </a>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <div class="text-muted small">
                        <p class="mb-1">Error Code: 403 - Forbidden</p>
                        <p class="mb-0">Request ID: @requestId</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string requestId = Guid.NewGuid().ToString("N").Substring(0, 8);
}