<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="uploads\**" />
    <Content Remove="uploads\**" />
    <EmbeddedResource Remove="uploads\**" />
    <None Remove="uploads\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="DocumentProcessor.db" />
    <None Remove="DocumentProcessor.db-shm" />
    <None Remove="DocumentProcessor.db-wal" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.10">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DocumentProcessor.Application\DocumentProcessor.Application.csproj" />
    <ProjectReference Include="..\DocumentProcessor.Core\DocumentProcessor.Core.csproj" />
  </ItemGroup>

  <!-- Copy scoped CSS bundle to wwwroot after build for easier deployment -->
  <Target Name="CopyScopedCssToWwwroot" AfterTargets="Build">
    <ItemGroup>
      <ScopedCssBundle Include="$(IntermediateOutputPath)scopedcss\bundle\*.styles.css" />
    </ItemGroup>
    <Copy SourceFiles="@(ScopedCssBundle)" DestinationFolder="$(ProjectDir)wwwroot\" SkipUnchangedFiles="true" Condition="Exists('$(IntermediateOutputPath)scopedcss\bundle\')" />
    <Message Text="Copied scoped CSS bundle to wwwroot: @(ScopedCssBundle)" Importance="high" Condition="Exists('$(IntermediateOutputPath)scopedcss\bundle\')" />
  </Target>

</Project>
